{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
